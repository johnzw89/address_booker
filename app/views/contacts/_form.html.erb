<%= form_for @contact do |f| %>
	  First name: <%= f.text_field :first_name, required: true %><br />
	  Last name : <%= f.text_field :last_name, required: true %><br />

	 	<div id="contact_method_fields">
		  <%= f.fields_for :contact_methods do |c| %>
		  	<span id="contact_method_field">
		  		Info: <%= c.text_field :info, required: true, class: "contact-info" %>
		  		<%= c.select :info_type, ContactMethod::TYPES %><br />
		  	</span>
		  <% end %>
		</div>

	  <%= f.submit class: "submit-btn" %>
	<% end %>