<h1><a href="<%= @url %>"><%= @contact.full_name %></a></h1>

<strong>Email</strong>
<% @contact.contact_methods.where(info_type: ContactMethod::TYPES[:email]).each do |email| %>
	<p><%= email.info %></p>
<% end %>

<strong>Phone Number</strong>
<% @contact.contact_methods.where(info_type: ContactMethod::TYPES[:phone]).each do |phone| %>
	<p><%= phone.info %></p>
<% end %>